@model IEnumerable<JourneyJoy.Models.VehicleModel>
@{
    ViewBag.Title = "Vehicle List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var imageMap = new Dictionary<string, string>
{
        { "Bike", "bike.png" },
        { "Van", "van.png" },
        { "Cars", "car.png" },
        { "Bus", "Bus.png" }
    };

    // Get the image filename based on ViewBag.VehicleType
    var imageName = imageMap.ContainsKey(ViewBag.VehicleType) ? imageMap[ViewBag.VehicleType] : "default.png"; // Provide a default image filename if the type is not found
}

<div class="page-heading" style="background-image: url(https://r4.wallpaperflare.com/wallpaper/590/199/595/dark-car-vehicle-nissan-wallpaper-c9f85c6066e1bf841be2db1e2c4329bc.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="top-text header-text">
                    <h6>Our Variety of Vechile Lists</h6>
                    <h2>Rent Vehicle.</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="listing-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="naccs">
                    <div class="grid">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="menu">
                                    <div class="first-thumb active">
                                        <div class="thumb">
                                            <a href="@Url.Action("VehicleList", "SearchedList", new { type = ViewBag.VehicleType })">
                                                <div class="thumb">
                                                    <span class="icon">
                                                        <img src="~/Content/Assets/images/@imageName" alt="@ViewBag.VehicleType">
                                                    </span>
                                                    @ViewBag.VehicleType
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-9">
                                <ul class="nacc">
                                    <!-- Searched Category Listing Vehicles -->
                                    @if (Model != null)
                                    {
                                        if (Model.Count() > 0)
                                        {
                                            foreach (var x in Model)
                                            {
                                                <li class="active">
                                                    <div>
                                                        <div class="col-lg-12">
                                                            <div class="owl-carousel owl-listing">
                                                                <div class="item">
                                                                    <div class="row">
                                                                        <div class="col-lg-12">
                                                                            <div class="listing-item">
                                                                                <div class="left-image">
                                                                                    <a href="#"><img src="~/Content/Assets/images/car2.jpg" alt=""></a>
                                                                                    <div class="hover-content">
                                                                                        <div class="main-white-button">
                                                                                            <a href="@Url.Action("BookVehicle", "Booking", new { VID = x.VehicleID })"><i class="fa fa-eye"></i> Book Now</a>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="right-content align-self-center">
                                                                                    <a href="#"><h4>@x.Title</h4></a>
                                                                                    <h6>Owner: @x.UserName</h6>
                                                                                    <span class="price">
                                                                                        <div class="icon"><img src="assets/images/listing-icon-01.png" alt=""></div> @x.TotalPrice / included tax
                                                                                    </span>
                                                                                    <span class="details">Details:@x.Detail</span>
                                                                                    <span class="info">
                                                                                        <img src="~/Content/Assets/images/seats.png" alt=""> @x.CarCapacity<br>
                                                                                        <img src="~/Content/Assets/images/mileage.png" alt=""> @x.TotalMilage Kmpl/kg<br>
                                                                                        <img src="~/Content/Assets/images/seats.png" alt=""> @x.TotalSeats
                                                                                    </span>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <div class="left-image">
                                            <a href="#"><img src="~/Content/Assets/images/no-data-found.jpg" alt=""></a>
                                            <div class="hover-content">
                                            </div>
                                        </div>
                                        <div style="text-align: center; margin-top: 20px;">
                                            <button type="button" onclick="window.history.back();" class="btn btn-secondary btn-group-lg main-button"><i class="fa fa-arrow-left"></i> Go Back</button>
                                        </div>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>