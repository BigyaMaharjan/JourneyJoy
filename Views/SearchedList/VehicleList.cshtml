@model IEnumerable<JourneyJoy.Models.VehicleTypeModel>
@{
    ViewBag.Title = "Vehicle List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-heading" style="background-image: url(https://r4.wallpaperflare.com/wallpaper/143/331/609/car-nissan-nissan-gtr-r34-nissan-skyline-gt-r-r34-wallpaper-83aa43ca2825ac0db862fe13d148c201.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="top-text header-text">
                    <h6>Check Out Our various cars</h6>
                    <h2>Item listings of Different Categories</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="listing-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="naccs">
                    <div class="grid">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="menu">
                                    <div class="first-thumb active">
                                        <div class="thumb">
                                            <a href="@Url.Action("VehicleList", "SearchedList", new { type = "Bike" })">
                                                <div class="thumb">
                                                    <span class="icon">
                                                        <img src="~/Content/Assets/images/bike.png" alt="Bike">
                                                    </span>
                                                    Bike
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="thumb">
                                            <a href="@Url.Action("VehicleList", "SearchedList", new { type = "Van" })">
