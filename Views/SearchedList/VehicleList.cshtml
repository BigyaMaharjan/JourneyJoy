                                                    <span class="icon">
                                                        <img src="~/Content/Assets/images/car.png" alt="Cars">
                                                    </span>
                                                    Cars
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="last-thumb">
                                        <a href="@Url.Action("VehicleList", "SearchedList", new { type = "Bus" })">
                                            <div class="thumb">
                                                <span class="icon">
                                                    <img src="~/Content/Assets/images/Bus.png" alt="Bus">
                                                </span>
                                                Bus
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-9">
                                <ul class="nacc">
                                    <!-- first category listing of items -->
                                    @if (ViewBag.VehicleType == "Bike")
                                    {
                                        if (Model != null)
                                        {
                                            if (Model.Count() > 0)
                                            {
                                                foreach (var x in Model)
                                                {
                                                    <li class="active">
                                                        <div>
                                                            <div class="col-lg-12">
                                                                <div class="owl-carousel owl-listing">
                                                                    <div class="item">
                                                                        <div class="row">
                                                                            <div class="col-lg-12">
                                                                                <div class="listing-item">
                                                                                    <div class="left-image">
                                                                                        <a href="#"><img src="~/Content/Assets/images/car2.jpg" alt=""></a>
                                                                                        <div class="hover-content">
                                                                                            <div class="main-white-button">
                                                                                                <a href="@Url.Action("BookVehicle", "Booking", new { VID = x.VehicleID })"><i class="fa fa-eye"></i> Book Now</a>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                    <div class="right-content align-self-center">
                                                                                        <a href="#"><h4>@x.Title</h4></a>
                                                                                        <h6>Owner: @x.UserName</h6>
                                                                                        <span class="price">
                                                                                            <div class="icon"><img src="assets/images/listing-icon-01.png" alt=""></div> @x.TotalPrice / included tax
                                                                                        </span>
                                                                                        <span class="details">Details:@x.Detail</span>
                                                                                        <span class="info">
                                                                                            <img src="~/Content/Assets/images/seats.png" alt=""> @x.VehicleCapacity<br>
                                                                                            <img src="~/Content/Assets/images/mileage.png" alt=""> @x.TotalMilage Kmpl/kg<br>
                                                                                            <img src="~/Content/Assets/images/seats.png" alt=""> @x.TotalSeats
                                                                                        </span>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </li>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <div class="left-image">
                                                <a href="#"><img src="~/Content/Assets/images/gadinotfound.jpg" alt=""></a>
                                                <div class="hover-content">
                                                </div>
                                            </div>
                                            <div style="text-align: center; margin-top: 20px;">
                                                <button type="button" onclick="window.history.back();" class="btn btn-secondary btn-group-lg main-button"><i class="fa fa-arrow-left"></i> Go Back</button>
