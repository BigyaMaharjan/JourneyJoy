        <!-- Primary button with ripple effect -->
        <!--<button class="btn pmd-ripple-effect btn-primary" type="button"> Primary </button>-->
        <!-- Success raised button with ripple effect -->
        <!--<button class="btn pmd-btn-raised pmd-ripple-effect btn-success" type="button">Success</button>-->

        <div style="background-color: #2E86C1; color: #FFC300; padding: 20px; ">
            <div style="font-size: 32px; font-weight:bolder">Journey Joy</div>
            <!-- Your content for the middle rows goes here -->
            <div style="font-size: 18px;">Get the best car renting service.</div>
        </div>


        @using (Html.BeginForm("VehicleList", "Home", new { }, FormMethod.Post, new { }))
        {
            <div class="form-floating mt-4">
                <div class="container">
                    <div class="row">
                        <div class="col-2">
                            <input type="text" class="form-control" placeholder="Search" id="floatingsearch" name="FromLocation" />
                        </div>
                        @*<div class="col-2">
                            <input type="text" class="form-control" placeholder="Location" id="floatinglocation1" name="Location1" />
                        </div>
                        <div class="col-2">
                            <input type="text" class="form-control" placeholder="Time" id="floatingtime1" name="Time1" />
                        </div>
                        <div class="col-2">
                            <input type="text" class="form-control" placeholder="Location" id="floatinglocation2" name="Location2" />
                        </div>
                        <div class="col-2">
                            <input type="text" class="form-control" placeholder="Time" id="floatingtime2" name="Time2" />
                        </div>*@
                        <div class="col-2">
                            <button type="submit" class="btn btn-primary" id="submitTest">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        }

            <div class="mt-4">
                <div class="row">
                    <div class="col-4">
                        <div class="card mb-md-4 ">
                            <img src="~/Content/Assets/image/car/money.png.jpg" alt="image here" width="100" height="100" />
                            <div class="card-body mb-md-4">
                                <h4 class="card-title fw-bold"> Flexible Rentals</h4>
                                <p class="card-text">Cancel or change most bookings for free up to 48 hours before pick-up.</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="card mb-md-4 ">
                            <img src="~/Content/Assets/image/car/calender.png.png" alt="image here" width="100" height="100" />
                            <div class="card-body mb-md-4">
                                <h4 class="card-title fw-bold"> Price Match Assurance</h4>
                                <p class="card-text">Found the same deal for less? We’ll match the price.</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="card mb-md-4">
                            <img src="~/Content/Assets/image/car/screw.png.jpg" alt="image here" width="100" height="100" />
                            <div class="card-body mb-md-4">
                                <h4 class="card-title fw-bold"> Transparent Fees</h4>
                                <p class="card-text">Know exactly what you’re paying</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Display an error alert at the top-right position of the window -->
            <button type="button" data-positionX="right" data-positionY="top" data-effect="fadeInUp" data-message="OK" data-type="error" class="btn pmd-ripple-effect btn-danger pmd-z-depth pmd-alert-toggle">
                Alert Error
            </button> @*@Html.Raw(Model.ErrorMessage)*@



            <!-- jquery js -->
            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

            <!-- Bootstrap js -->
            <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

            <!-- Propeller Global js -->
            <script src="https://opensource.propeller.in/components/global/js/global.js"></script>

            <!-- Propeller ripple effect js -->
            <script type="text/javascript" src="https://opensource.propeller.in/components/button/js/ripple-effect.js"></script>

            <!-- Propeller alerts js -->
            <script type="text/javascript" src="https://opensource.propeller.in/components/alert/js/alert.js"></script>

            @*NEW ADD*@
            <script src="//code.jquery.com/jquery-2.2.4.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

            <input type="text" placeholder="Location" id="location" name="Location" />
            <input type="text" placeholder="Time" id="time" name="Time" />
            <button type="submit" id="submitTest"> Submit</button>
            <a href="@Url.Action("BookVehicle", "Booking")"> CAR</a>
            <a href="@Url.Action("NoVehicleFound", "Error")"> Error</a>
            <a href="@Url.Action("VehicleList", "Home")"> After Selection</a>
        </body>
</html>

@section scripts
{
    <script>
            $(document).ready(function () {
                if ('@TempData["message"]' == "Added") {
                    toastr.success('Action successfully changed....', 'ActionName');
                    toastr.error('Action failed changed....', 'ActionName');
                    toastr.warning('Action warning changed....', 'ActionName');
                    toastr.info('Action info changed....', 'ActionName');
                }
                else { }
            });
    </script>
}