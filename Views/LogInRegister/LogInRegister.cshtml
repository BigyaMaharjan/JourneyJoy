
@{
    ViewBag.Title = "LogInRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="top-text header-text">
                    <h6>Keep in touch with us</h6>
                    <fh2>Feel free to send us a message about your business needs</fh2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="contact-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content front card">
                    <div class="row">
                        <div class="col-lg-6">
                            <div id="map">
                                <iframe src="https://maps.google.com/maps?q=Av.+L%C3%BAcio+Costa,+Rio+de+Janeiro+-+RJ,+Brazil&t=&z=13&ie=UTF8&iwloc=&output=embed" width="100%" height="650px" frameborder="0" style="border:0" allowfullscreen></iframe>
                            </div>
                        </div>
                        <div class="col-lg-6 align-self-center">
                            @using (Html.BeginForm("UserLogin", "LogInRegister", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken();
                                <div class="row">
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <input type="text" name="Mobilenumber" id="email" placeholder="Your Mobilenumber" required="">
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <input type="password" name="password" id="password" placeholder="Your Password" required="">
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                                        <fieldset>
                                            <button type="submit" id="form-submit" class="main-button "><i class="fa fa-paper-plane"></i> Log In</button>
                                        </fieldset>
                                        <fieldset>
                                            <button type="button" class="main-button  flip"><i class="fa fa-paper-plane"></i> Sign Up</button>
                                        </fieldset>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row back card">
            <div class="col-lg-12">
                <div class="inner-content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div id="map">
                                <iframe src="https://maps.google.com/maps?q=Av.+L%C3%BAcio+Costa,+Rio+de+Janeiro+-+RJ,+Brazil&t=&z=13&ie=UTF8&iwloc=&output=embed" width="100%" height="650px" frameborder="0" style="border:0" allowfullscreen></iframe>
                            </div>
                        </div>
                        <div class="col-lg-6 align-self-center">
                            <form id="contact" action="" method="get">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <fieldset>
                                            <input type="name" name="name" id="name" placeholder="Name" autocomplete="on" required>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-6">
                                        <fieldset>
                                            <input type="surname" name="surname" id="surname" placeholder="Surname" autocomplete="on" required>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <input type="text" name="email" id="email" placeholder="Your Mobilenumber" required="">
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <input type="password" name="email" id="password" placeholder="Your Password" required="">
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <input type="password" name="email" id="password" placeholder="Your Confirm Password" required="">
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                                        <fieldset>
                                            <button type="submit" id="form-submit" class="main-button "><i class="fa fa-paper-plane"></i> Sign Up</button>
                                        </fieldset>
                                        <fieldset>
                                            <button type="button" class="main-button flip"><i class="fa fa-paper-plane"></i> Log In</button>
                                        </fieldset>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>